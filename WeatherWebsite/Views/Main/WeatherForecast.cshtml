@model WeatherBackend.DTO.Base.WeatherForecastResponse
@{
    ViewData["Title"] = "Get weather in location";
}

@if (Model != null)
{
    <div>Weather forecast</div>
    <a href="/Main" class="link-primary" type="button">Return</a>
    <div>Hourly forecast</div>
    @foreach (var forecast in Model.List)
    {
        <div class="d-flex align-items-center justify-content-between border border-grey mt-2 p-3">
            <div>
                <div class="font-weight-bold" id="location-info">
                    <div>@forecast.dt_txt</div>
                    <div>@($"{forecast.main.temp - 273.15:0.00}°C {forecast.weather.Last().Description}" )</div>
                    
                </div>
            </div>
        </div>
    }
}
else
{
    <div>Can't see hour forecast</div>
}
