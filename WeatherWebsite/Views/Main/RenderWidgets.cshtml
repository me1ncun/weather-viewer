@using WeatherFrontend.DAL.Models
@model IEnumerable<WeatherFrontend.DAL.Models.Location>
@{
    ViewData["Title"] = "Render widgets";
}
@if (Model != null)
{
@foreach (Location weather in Model)
{
    <div class="d-flex align-items-center justify-content-between border border-grey mt-2 p-3">
        <div>
            <div class="font-weight-bold" id="location-info">

                <div>@weather.Name</div>
                <div>@weather.LocationId</div>

                <div>Humidity: @weather.Longtitude %</div>
            </div>
        </div>

        <button class="btn btn-primary btn-secondary" style="margin-left: 10px;" id="logout-reference" type="submit">View forecast</button>
    </div>
}
}
else
{
    <div>Can't see weather</div>
}